@{
    ViewData["Title"] = "Регистрация";
}
@model RegisterModel

<h2 class="mb-4">Регистрация</h2>

<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div class="row g-3">
        <div class="col-md-4">
            <label asp-for="Email" class="form-label">Введите Email</label><br />
            <input type="text" asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" />
        </div>
        <div class="col-md-4">
            <label asp-for="Password" class="form-label">Введите пароль</label><br />
            <input asp-for="Password" class="form-control"  />
            <span asp-validation-for="Password" />
        </div>
        <div class="col-md-4">
            <label asp-for="ConfirmPassword" class="form-label">Повторите пароль</label><br />
            <input asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" />
        </div>
        <div class="col-12">
            <input type="submit" value="Регистрация" class="btn btn-outline-dark"  />
        </div>
    </div>
</form>

<a asp-action="Login" asp-controller="Account" class="btn btn-outline-dark mt-3">Войти</a>