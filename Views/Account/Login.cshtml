@{
    ViewData["Title"] = "Авторизация";
}
@model LoginModel

<h2 class="mb-4">Вход на сайт</h2>

<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div class="row g-3">
        <div class="col-md-4">
            <label asp-for="Email" class="form-label">Введите Email</label>
            <input type="text" asp-for="Email" class="form-control"/>
            <span asp-validation-for="Email"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="Password" class="form-label">Введите пароль</label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password"></span>
        </div>
        <div class="col-12">
            <input type="submit" value="Войти" class="btn btn-outline-dark" />
        </div>
    </div>
</form>

<a asp-action="Register" asp-controller="Account" class="btn btn-outline-dark mt-3">Регистрация</a>